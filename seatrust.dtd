<!ELEMENT roster (foundingCircleDonors, sponsorshipDonors, patronDonors, friendshipDonors)*>
<!ELEMENT foundingCircleDonors (donor*)>
<!ELEMENT sponsorshipDonors (donor*)>
<!ELEMENT patronDonors (donor*)>
<!ELEMENT friendshipDonors (donor*)>
<!ELEMENT donor (name, address, homePhone?, cellPhone?, workPhone?, email?, donation, method, effectiveDate)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT address (#PCDATA)>
<!ELEMENT homePhone (#PCDATA)>
<!ELEMENT cellPhone (#PCDATA)>
<!ELEMENT workPhone (#PCDATA)>
<!ELEMENT email (#PCDATA)>
<!ELEMENT donation (#PCDATA)>
<!ELEMENT method (#PCDATA)>
<!ELEMENT effectiveDate (#PCDATA)>
]>
